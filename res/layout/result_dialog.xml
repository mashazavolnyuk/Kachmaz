<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result point"/>

        <LinearLayout
                android:id="@+id/result_resultContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </LinearLayout>

        <TextView
                android:id="@+id/result_iterationCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iteration count"/>

        <TextView
                android:id="@+id/result_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/result_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/result_okButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="OK"/>

    </LinearLayout>

</RelativeLayout>